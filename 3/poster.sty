\newcommand{\coloredsection}[3]{%
    \begin{center}
        \begin{tcolorbox}[
            enhanced,
            colback=#1,
            colframe=#1!70,
            arc=6pt,
            boxrule=3pt,
            width=0.6\linewidth,
            ]
            \centering
            {\fontsize{50pt}{50pt}\selectfont\textbf{#2}}\\[3ex] % Adjusted font size and vertical space
            #3 % Content added here
        \end{tcolorbox}
    \end{center}
}

% Define command for colored subsection titles
\newcommand{\coloredsubsection}[3]{%
    \vspace{-1.2em} % Small gap between section and subsection
    \begin{center}
        \begin{tcolorbox}[
            enhanced,
            colback=#1,
            colframe=#1!70,
            arc=20pt,
            boxrule=3pt,
            width=0.98\linewidth,
            ]
            
            {\fontsize{35}{35}\selectfont{#2}}\\[1ex] % Adjusted font size and vertical space
            #3 % Content added here
        \end{tcolorbox}
    \end{center}
}


