% Define colorful triangle icon command with rotation
\newcommand{\triangleicon}[1]{\rotatebox{0}{\begin{tikzpicture}[scale=0.35]
    \fill[#1] (0,0) -- (1,1.732) -- (2,0) -- cycle;
\end{tikzpicture}}}


